# Dockerfile for the worker FastAPI service
FROM python:3.11-slim

# Install uv
RUN pip install uv

# Set workdir
WORKDIR /app

# Copy dependency files
COPY backend/pyproject.toml backend/uv.lock ./

# Install dependencies
RUN uv sync --frozen --no-install-project

# Copy the backend code
COPY backend/ ./

# Expose port
EXPOSE 8001

# Run the app
CMD ["uv", "run", "uvicorn", "worker_pdf:app", "--host", "0.0.0.0", "--port", "8001"]